{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "rewrites": [
    { "source": "/index.php", "destination": "/../index.php" },
    { "source": "/add.php", "destination": "/../add.php" },
    { "source": "/update.php", "destination": "/../update.php" },
    { "source": "/delete.php", "destination": "/../delete.php" },
    { "source": "/(.*)", "destination": "/api/index.php" }
  ]
}